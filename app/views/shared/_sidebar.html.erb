<% if current_user %>
  <div class="sidebar" data-controller="dropdown">
    <div class="top-element">
      <%= image_tag "stackr-white.png", class: "img-header" %>
      <h3><%= current_user.organization.name %></h3>
    </div>
    <div class="sidebar-menu">
      <button class="dropdown-btn" data-action="click->dropdown#toggle">
        Stack Space
        <i class="fa-solid fa-angle-left" data-dropdown-target="arrow"></i>
      </button>

      <div class="dropdown-container"  data-dropdown-target="menu">
        <%= link_to user_path(current_user) do %>
          <span class="dropdown-item">Personnal Stack</span>
        <% end %>
        <%= link_to team_path(current_user.team) do %>
          <span class="dropdown-item">Team Stack</span>
        <% end %>
        <%= link_to organization_path(current_user.organization) do %>
          <span class="dropdown-item">Organization Stack</span>
        <% end %>
      </div>
      <span class="menu-item">Marketplace</span>
    </div>

    <div class="bottom-element">
      <%= image_tag "default-logo.jpg", class: "img-footer" %>
      <p>
        <%= current_user.first_name %>
        <%= current_user.last_name %>
      </p>
      </div>
  </div>
<% end %>
