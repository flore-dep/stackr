<div class="m-5">
  <div class="d-flex justify-content-between">
    <div class="team-name-card">
      <h2 class="mb-3 fw-bold"> <%= @team.name %> Team</h2>
      <% manager = @team.users.where(role: "Manager").first %>
      <p class="mb-3"> Managed by <%= manager.first_name + " " + manager.last_name %> </p>
      <h3><b><%= @team.cost %>‚Ç¨ / month</b></h3>
      <%= image_tag "default-pp.jpg", class: "fixed-img-card" %>
    </div>
     <%= link_to "Back to all teams", teams_path, class: "text-dark fs-5 align-self-end" %>
  </div>

  <div data-controller="navbar">
    <%= render "shared/account_navbar", active_tab: 'members', display_selector: true%>

      <!-- MEMBERS -->
    <div data-navbar-target="membersPart">
      <% @team.users.active.each do |member| %>
       <%= render "shared/members", member: member, display_selector: true %>
      <% end %>
    </div>

    <div data-navbar-target="toolsPart" class='d-none'>
      <div class="d-flex flex-wrap ms-5">
        <% @tools.each do |tool| %>
          <%= render 'shared/tool_stack_card', tool: tool, plan: @plans_by_tool_id[tool.id] %>
        <% end %>
      </div>
    </div>


    <!-- LICENSES -->
    <div data-navbar-target="licensesPart" data-controller="license-subnavbar" class='d-none'>
    <!-- seconde navbar -->
      <div class="d-flex justify-content-between align-items-center pb-5 px-5">
    <!-- Boutons √† gauche -->
        <div class="d-flex gap-3">
          <button class="btn btn-outline-warning active" data-license-subnavbar-target="pending" data-action="click->license-subnavbar#setPending">Pending</button>
          <button class="btn btn-outline-success" data-license-subnavbar-target="approved" data-action="click->license-subnavbar#setApproved">Approved</button>
          <button class="btn btn-outline-danger" data-license-subnavbar-target="declined" data-action="click->license-subnavbar#setDeclined">Declined</button>
        </div>
    <!-- Toggle √† droite -->
        <div class="form-check form-switch" data-license-subnavbar-target="toggle" data-action="click->license-subnavbar#toggleToggle">
          <input class="form-check-input" type="checkbox" id="toggleSwitch">
          <label class="form-check-label" for="toggleSwitch">Active</label>
        </div>
      </div>


      <div class="d-flex flex-wrap ms-5 d-none" data-license-subnavbar-target="pendingLicenses">
        <% @all_licenses.where(status: "Pending").each do |license| %>
          <%= render 'shared/license_card', license: license %>
        <% end %>
      </div>
      <div class="d-flex flex-wrap ms-5 d-none" data-license-subnavbar-target="approvedActiveLicenses">
        <% @all_licenses.where("licenses.start_date <= ? AND licenses.end_date > ?", Time.now, Time.now).where(status: "Approved").each do |license| %>
          <%= render 'shared/license_card', license: license %>
        <% end %>
      </div>
      <div class="d-flex flex-wrap ms-5 d-none" data-license-subnavbar-target="approvedPastLicenses">
        <% @all_licenses.where("licenses.start_date > ? OR licenses.end_date <= ?", Time.now, Time.now).where(status: "Approved").each do |license| %>
          <%= render 'shared/license_card', license: license %>
        <% end %>
      </div>
      <div class="d-flex flex-wrap ms-5 d-none" data-license-subnavbar-target="declinedLicenses">
        <% @all_licenses.where(status: "Declined").each do |license| %>
          <%= render 'shared/license_card', license: license %>
        <% end %>
      </div>

    </div>
  </div>
</div>


<!-- MODALES -->

<!-- Modale Members -->
<div class="modal fade" id="membersModal" tabindex="-1" aria-labelledby="membersModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="membersModalLabel">‚ö° Add a member to your team</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container mt-5">
          <%= simple_form_for [@team, User.new] do |f| %>
            <div class="form-inputs">
              <%= f.input :first_name %>
              <%= f.input :last_name %>
              <%= f.input :email %>
              <%= f.input :role, collection: %w[Founder Manager Employee], selected: "Employee" %>
              <%= f.input :password %>
              <%= f.input :start_date %>
              <%= f.input :end_date %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "Add member", class: "btn btn-success mt-4 mb-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modale Tools -->
<div class="modal fade" id="toolsModal" tabindex="-1" aria-labelledby="toolsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="toolsModalLabel">‚öôÔ∏è Add a tool to your team</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container mt-5">
          <%= simple_form_for [@team, User.new] do |f| %>
            <div class="form-inputs">
              <%= f.input :first_name %>
              <%= f.input :role %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "Add tool", class: "btn btn-success mt-4 mb-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Licenses -->
<div class="modal fade" id="licensesModal" tabindex="-1" aria-labelledby="licensesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="licensesModalLabel">üìÑ Add a subscription to your team</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container mt-5">
          <%= simple_form_for [@team, User.new] do |f| %>
            <div class="form-inputs">
              <%= f.input :first_name %>
              <%= f.input :start_date %>
              <%= f.input :end_date %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "Add subscription", class: "btn btn-success mt-4 mb-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modale Remove -->
<% @team.users.each do |member| %>
  <div class="modal fade" id="<%= dom_id(member, :removeModal) %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel"> ‚ö°It's been a looooong daaaayy <%= member.first_name %></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="container mt-5">
            <%= simple_form_for member, method: :delete do |f| %>
              <div class="form-inputs">
                <%= f.input :end_date, html5: true %>
              </div>
              <div class="form-actions text-center">
                <%= f.button :submit, "Set departure", data: { turbo_confirm: "Are you sure?" }, class: "btn btn-success mt-4 mb-2" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
